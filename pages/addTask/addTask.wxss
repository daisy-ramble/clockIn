/* pages/addTask/addTask.wxss */
.add_form {
  margin: 30rpx;
}
.form-item {
  margin-bottom: 30rpx;
}
.form-item .lable_name {
  margin: 20rpx 0 20rpx;
}
.picker_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.picker_box image {
  width: 50rpx;
  height: 50rpx;
  transform: rotate(-90deg);
}
.add_btn {
  margin-top: 50rpx;
}

.fade
{
  animation: fadeIn 1s;
}
@keyframes fadeIn {
  0% {
    opacity: 0; /*初始状态 透明度为0*/
  }
  100% {
    opacity: 1; /*结尾状态 透明度为1*/
  }
}